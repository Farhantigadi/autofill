{
  "manifest_version": 3,
  "name": "Job Application Autofill",
  "version": "1.0.0",
  "description": "Auto-fill job application forms with stored profile data",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auto-fill Job Application"
  }
}